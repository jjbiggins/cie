#include <iostream>
#include <stdio.h>
#include "min_max.h"

using namespace std;

void obtainMinMax(const int NumArrayElements, float myArray[], float & max, float & min){

    max = myArray[0];
    min = myArray[0];

    for( int i = 0; i < NumArrayElements; i++) {
            if(myArray[i] > max){
                max = myArray[i];
            }
            else if(myArray[i] < min){
                min = myArray[i];
            }

        }

    }
